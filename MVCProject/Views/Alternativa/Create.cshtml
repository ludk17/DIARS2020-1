<h2>Crear Alternativa</h2>
<h3>@ViewBag.Pregunta.Tema.Titulo</h3>
<h4>@ViewBag.Pregunta.Descripcion</h4>


<div class="row">
    <div class="col-xs-6 col-xs-offset-3">
        <form action="/alternativa/create" method="post">

            <input type="hidden" name="temaId" value="@ViewBag.Pregunta.TemaId" />
            <input type="hidden" name="PreguntaId" value="@ViewBag.Pregunta.Id" />
            <div class="form-group">
                <label class="control-label">Alternativa</label>
                <textarea class="form-control" name="Resumen"></textarea>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="true" name="EsCorrecto"> Es correcto
                </label>
            </div>

            <button class="btn btn-primary">Guardar</button>            
        </form>
    </div>
</div>

