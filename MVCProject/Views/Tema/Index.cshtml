
@{
    ViewData["Title"] = "Index";
}

<h2>Temas</h2>

<div class="row">
    <div class="col-xs-10">
        <form action="/tema" method="get">
            <input type="text" class="form-control" autofocus value="@ViewBag.Query" name="query" placeholder="Buscar" />
        </form>
    </div>
    <div class="col-xs-2 text-right">
        <a href="/tema/create" class="btn btn-default">Nuevo Tema</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Categoría</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tema in Model)
        {
            <tr>
                <td>@tema.Id</td>
                <td>@tema.Titulo</td>
                <td>@tema.Categoria.Nombre</td>
                <td>
                    <a href="/pregunta/index?temaId=@tema.Id">Preguntas</a>
                </td>
            </tr>
        }
    </tbody>

</table>


